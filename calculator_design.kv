<Calculator>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, 0.15)

        GridLayout:
            cols: 4
            rows: 5

        # Row
            Button:
                size_hint: (1,1)
                font_size: 32
                text: '%'

            Button:
                size_hint: (1,1)
                font_size: 32
                text: u"\u00AB"

            Button:
                id: calc_clear
                size_hint: (1,1)
                font_size: 32
                text: 'C'
                on_press: root.calc_clear()

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '/'
                on_press: root.divide_value()

        # Row
            Button:
                size_hint: (1,1)
                font_size: 32
                text: '7'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(7)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '8'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(8)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '9'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(9)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: 'x'
                on_press: root.multiply_value()

        # Row
            Button:
                size_hint: (1,1)
                font_size: 32
                text: '4'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(4)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '5'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(5)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '6'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(6)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '-'
                on_press: root.subtract_value()

        # Row
            Button:
                size_hint: (1,1)
                font_size: 32
                text: '1'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(1)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '2'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(2)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '3'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(3)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '+'
                on_press: root.add_value()

        # Row
            Button:
                size_hint: (1,1)
                font_size: 32
                text: '+/-'
                background_color:(157/255, 157/255, 157/255, 1)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '0'
                background_color:(157/255, 157/255, 157/255, 1)
                on_press: root.press_button(0)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '.'
                background_color:(157/255, 157/255, 157/255, 1)

            Button:
                size_hint: (1,1)
                font_size: 32
                text: '='
                on_press: root.equals_value()
